<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header') %>
</head>
<body>

    <% const name = 'paul' %>
    
    <h1>Home</h1>
    <%- include('./partials/nav') %>

    <h2><%= name %></h2>

    <% if (boards.length > 0) { %>
    <table>
        <tr>
            <td>no</td>
            <td>title</td>
            <td>date</td>
        </tr>
    <% boards.forEach(board => { %>
        <tr>
            <td><%= board.no %></td>
            <td><%= board.title %></td>
            <td><%= board.date %></td>
        </tr>
    <% }) %>
    </table>
    <% } %>

    <%- include('./partials/footer') %>

</body>
</html>
